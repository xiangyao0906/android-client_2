<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/news_height"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:background="@color/bg_btn_black">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding_small"
            android:src="@drawable/icon_notice"/>

    <ViewFlipper
            android:id="@+id/mFlipperView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="44dp"
            android:layout_height="wrap_content"
            android:flipInterval="3000"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_padding_small"
            android:src="@drawable/arrow_right_white"/>
</LinearLayout>
